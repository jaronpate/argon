    <!-- Server Acronym Function -->
    <script>
        function acr(str) {
            return str.split(/\b(?=[a-z]|["'"])/ig) // split on word boundaries
                .map(token => token[0])         // get first letter of each token
                .join('').toLowerCase()         // convert to lowercase string
        }
    </script>

